
/* 主页样式 */

.page-top {
  height: 100%;
  position: relative;
  width: 750rpx;
  background-color: white;
  z-index: 0;
  transition: All 0.4s ease;
  -webkit-transition: All 0.4s ease;
}

/* 遮盖层样式 */

.cover {
  width: 100%;
  height: 100%;
  background-color: #d8d8d8;
  opacity: 0.5;
  z-index: 9000;
}

.content {
  margin-top: 100rpx;
}

swiper {
  width: 100%;
}

swiper-item {
}

image {
  width: 100%;
}

/*导航栏 */

.nav_wrap {
  color: #666;
}

.nav {
  white-space: nowrap;
  padding: 5rpx 0;
}

.nav_item {
  padding: 20rpx 45rpx;
  font-size: 32rpx;
  display: inline-block;
}

.nav_item.active {
  border-bottom: 5rpx solid #de688b;
  font-size: 40rpx;
  color: black;
}

/* 主要内容的wxss */

.container {
  /* overflow: hidden; */
  padding: 0;
  margin: 1rpx;
  background-color: #f0f0f0;
  /* border: 1px solid black; */
}

.page-info {
  padding-left: 2rpx;
  border-radius: 20rpx;
  background-color: white;
  border-bottom: 2rpx solid #d8d8d8;
  align-content: flex-start;
  width: 98%;
  height: auto;
}

.page-info-img {
  width: 28%;
  float: left;
}

.page-info-img .image {
  height: 235rpx;
  border-radius: 20rpx;
}

.page-info-msg {
  width: 72%;
  float: left;
}

.title {
  font-size: 33rpx;
  margin-left: 25rpx;
  font-family: 华文中宋;
}

.title1 {
  float: left;
  font-size: 30rpx;
  margin: 25rpx;
  color: #989898;
}

.title2 {
  margin-left: 25rpx;
  margin-top: 30rpx;
  font-size: 30rpx;
  color: #f90;
}

.title3 {
  float: left;
  font-size: 30rpx;
  margin: 25rpx;
  color: #989898;
}

.title3.active {
  float: left;
  font-size: 30rpx;
  margin: 25rpx;
  color: #f80000;
}

